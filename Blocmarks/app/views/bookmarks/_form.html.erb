<script>blocmetrics.report("edit");</script>
<div class="col-md-6">
<%= form_for [topic, new_bookmark], remote: true do |f| %>

  <% if new_bookmark.errors.any? %>
    <div class="alert alert-danger">
      <ul>
      <% new_bookmark.errors.full_message.each do |msg| %>
        <l1><%= msg%></li>
      <%end%>
      </ul>
    </div>
  <%end%>
  <%= f.label "new bookmark"%>
  <%= f.url_field :url, rows: 1, class:'form-control', placeholder:"Enter bookmark url"%>
  <div class="form-group">
    <%= f.submit "Save", class: 'btn btn-success'%>
  </div>
<% end %>
</div>
